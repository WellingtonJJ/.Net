@model IEnumerable<Digimon.Dominio.Motorista>

@{
    ViewBag.Title = "Motoristas Cadastrados";
}

<h2>Lista de Motoristas</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Motorista", "ui020cadastrarmotorista")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdMotorista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdMotorista)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.IdMotorista }) |
            @Html.ActionLink("Detalhes", "Detalhes", new {  id=item.IdMotorista  }) |
            @Html.ActionLink("Desativar", "Desativar", new {  id=item.IdMotorista})
        </td>
    </tr>
}

</table>
