.@{
    ViewBag.Title = "RecuperarSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Recuperar Senha</h1>
<form name="form" method="post" action="#" id="formularioJ" class="formulario">
    <fieldset>
        <legend>Dados de Recuperação</legend><br>
        <div class="rc">
            <div class="campo">
                <label for="perguntaSecreta">Pergunta secreta</label><br>
                <select id="perguntaSecreta" name="perguntaSecreta">
                    <option value="pergunta1" selected>Selecione a pergunta secreta.</option>
                    <option value="pergunta1">Qual o nome do seu primo favorito.</option>
                    <option value="pergunta2">Qual o nome do seu primeiro animal de estimação.</option>
                    <option value="pergunta3">Quem foi seu herói de infância.</option>
                </select><span id="x_ufJ" class="tSpan"></span>
            </div><br>
            <div class="campo">
                <label for="respPerguntaSecretaJ">Resposta pergunta secreta</label><br>
                <input type="text" name="respPerguntaSecreta" id="respPerguntaSecretaJ" class="campoObrig iLetras" maxlength="60" size="46"><span class="tSpan" id="x_respPerguntaSecretaJ"></span>
            </div><br>
            <div class="campo">
                <label for="novaSenhaJ">Nova senha</label><br>
                <input type="text" name="novaSenha" id="novaSenhaJ" size="20" class="campoObrig iLetras"><span class="tSpan" id="x_novaSenhaJ"></span>
            </div>
            <div class="campo">
                <label for="confNovaSenhaJ">Confirmar Nova senha</label><br>
                <input type="text" name="confNovaSenha" id="confNovaSenhaJ" class="campoObrig iLetras" size="19"><span class="tSpan" id="x_confNovaSenhaJ"></span>
            </div>
        </div>
    </fieldset>
    <div class="botoes" id="botoes">
        <input type="reset" value="LIMPAR" name="Limpar" id="limparJ" class="botaoJ">
        <input type="submit" value="SALVAR" name="enviar" id="enviarJ" class="botaoJ">
    </div><!--Fim div botoes-->
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
